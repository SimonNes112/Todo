
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} } ) do |f| %>

<div class="login-page">
  <div class="form">
    <form class="register-form">
    <h2>Sign up</h2>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
      
    <% if @minimum_password_length %>
      <br />
    
    <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
      
      <button><%= f.submit "Sign up" %></button>
      <p class="message">Already registered? <%= render "devise/shared/links" %></p>
      
    </form>
  </div>
</div>
<% end %>



 
 





