

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
<div class="login-page">
  <div class="form">
    
    <form class="login-form">
    <h2>Login</h2>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email"%>
      <%= f.password_field :password, autocomplete: "current-password" , placeholder: "Password" %>
      <button><%= f.submit "Log in" %></button>
      <p class="message">Not registered?<%= render "devise/shared/links" %> </p>
      
    </form>
  </div>
</div>
<% end %>




